<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dodawanie notatki -->
        <EditText
            android:id="@+id/titleInput"
            android:hint="Tytuł notatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/noteInput"
            android:hint="Treść notatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/saveButton"
            android:text="Zapisz notatkę"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Usuwanie notatki -->
        <EditText
            android:id="@+id/deleteIdInput"
            android:hint="ID do usunięcia"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/deleteButton"
            android:text="Usuń notatkę"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/updateIdInput"
            android:hint="ID do aktualizacji"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/updateTextInput"
            android:hint="Nowa treść notatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/updateButton"
            android:text="Aktualizuj notatkę"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notesDisplay"
            android:text="Tutaj pojawią się notatki..."
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
