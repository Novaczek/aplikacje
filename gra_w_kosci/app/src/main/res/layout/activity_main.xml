<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5CD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:background="#A52A2A"
        android:gravity="center"
        android:text="Gra w kości. Autor: Jakub Nowak"
        android:textColor="#F8F7F7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/rzut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RZUĆ KOŚCIAMI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.058"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/wynik_los"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_wynik"
        app:layout_constraintVertical_bias="0.148"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/wynik_gry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wynik_los"
        app:layout_constraintVertical_bias="0.088"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/liczba_rzut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wynik_gry"
        app:layout_constraintVertical_bias="0.069"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/kostk1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/kostk2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kostk5"
        app:layout_constraintStart_toEndOf="@+id/kostk1"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/kostk3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kostk6"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/kostk4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kostk3"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/kostk5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kostk4"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/kostk6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="?"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/reset_wynik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESETUJ WYNIK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rzut"
        app:layout_constraintVertical_bias="0.31"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>